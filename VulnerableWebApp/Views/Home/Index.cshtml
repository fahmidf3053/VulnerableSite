@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}

<div class="login-form-bg h-100">
    <div class="container h-100" style="margin-top:10%">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">
                        <div class="card-body pt-5">
                            <h5 class="card-header text-center">Log In</h5>
                            <form id="account" action="/Home/Index" method="post">
                                @if (!string.IsNullOrWhiteSpace(ViewBag.message))
                                {
                                  <div class="text-danger validation-summary-errors" data-valmsg-summary="true">
                                        @Html.Raw(@ViewBag.message)
                                   </div>
                                }
                                <div class="form-group">
                                    <input name="userName" class="form-control mt-1" placeholder="UserName" />
                                </div>
                                <div class="form-group">
                                    <input name="password" type="password" class="form-control" placeholder="Password" />
                                </div>
                                <div class="form-group" style="text-align:right">
                                    <button type="submit" class="btn btn-primary">Log in</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
