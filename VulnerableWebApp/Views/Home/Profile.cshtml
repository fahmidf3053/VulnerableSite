@model ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}
<h1>Welcome @Model.Name</h1>
<div class="row">
    <div class="col-5">
        <h5>Users</h5>
        <table class="table table-striped table-bordered" style="border: 1px solid #dee2e6;">
            <tbody>
                @{
                    foreach (var user in Model.RequestToBeSent)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="button" value="Add"
                                   onclick="location.href='@Url.Action("PokeFriend", "Home", new { to = @user.UserName })'" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="col-5">
        <h5>Pokes</h5>
        <table class="table table-striped table-bordered" style="border: 1px solid #dee2e6;">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Time</td>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var request in Model.IncomingRequest)
                    {
                        <tr>
                            <td><b>@request.RequestFrom</b></td>
                            <td>@request.CreatedTime</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="col-2">
        <input type="button" value="Logout" onclick="location.href='@Url.Action("Logout", "Home")'" />
    </div>
</div>
